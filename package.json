{
  "name": "spotify-dlp",
  "version": "1.0.0",
  "description": "Download Spotify playlists to mp3 via Youtube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@https://github.com/alexahn1929/spotify-dlp.git"
  },
  "author": "alexahn1929",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alexahn1929/spotify-dlp/issues"
  },
  "homepage": "https://github.com/alexahn1929/spotify-dlp#readme",
  "devDependencies": {
    "electron": "^24.2.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.5",
    "cross-fetch": "^3.1.5",
    "mp3tag.js": "^3.3.2"
  },
  "build": {
    "appId": "xyz.alexahn.spotify-dlp",
